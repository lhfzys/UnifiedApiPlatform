{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Application": {
    "Name": "UnifiedApiPlatform",
    "Version": "1.0.0",
    "Environment": "Development",
    "EnableSwagger": true,
    "EnableDetailedErrors": true,
    "SupportEmail": "support@yourcompany.com"
  },
  "Database": {
    "Host": "localhost",
    "Port": 5432,
    "Database": "unifiedapi_db",
    "Username": "postgres",
    "Password": "postgres",
    "MinPoolSize": 5,
    "MaxPoolSize": 20,
    "ConnectionTimeout": 30,
    "CommandTimeout": 60,
    "EnableSensitiveDataLogging": false
  },
  "Jwt": {
    "SecretKey": "UnifiedApi2025SecretKeyChangeThisInProduction123456789ABCD",
    "Issuer": "UnifiedApiPlatform.API",
    "Audience": "UnifiedApiPlatform.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "MaxRefreshTokensPerUser": 5
  },
  "Redis": {
    "Host": "localhost",
    "Port": 6379,
    "Password": "",
    "InstanceName": "UnifiedApiPlatform",
    "Database": 0,
    "ConnectTimeout": 5000,
    "SyncTimeout": 5000
  },
  "Email": {
    "FromEmail": "noreply@yourcompany.com",
    "FromName": "UnifiedApiPlatform",
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "Username": "noreply@yourcompany.com",
    "Password": "your_smtp_password",
    "EnableSsl": true
  },
  "FileStorage": {
    "Provider": "Local",
    "LocalPath": "./uploads",
    "BaseUrl": "http://localhost:5116",
    "MaxFileSizeInMB": 10,
    "MaxLargeFileSizeInMB": 50,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".pdf",
      ".xlsx",
      ".docx",
      ".zip"
    ],
    "TempFileExpirationHours": 24,
    "Minio": {
      "Endpoint": "localhost:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin",
      "UseSSL": false,
      "BucketName": "unifiedapi"
    }
  },
  "Hangfire": {
    "WorkerCount": 10,
    "JobRetryAttempts": 3,
    "EnableDashboard": true,
    "DashboardPath": "/hangfire",
    "DashboardUsername": "admin",
    "DashboardPassword": "admin123"
  },
  "Cors": {
    "PolicyName": "DefaultCorsPolicy",
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8080"
    ],
    "AllowCredentials": true
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}
